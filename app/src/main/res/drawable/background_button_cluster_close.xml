<!-- button_with_border.xml -->

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Adiciona a borda -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#ddd" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <!-- Inclui o botão com seu ícone de fundo original -->
    <item android:drawable="@drawable/ic_button_close"
        android:top="8dp"
        android:left="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</layer-list>
