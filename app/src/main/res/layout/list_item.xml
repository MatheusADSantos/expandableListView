<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/listItemCardview"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:foregroundGravity="center"
        app:cardCornerRadius="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/listItem"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:src="@drawable/ic_map_center" />
    </androidx.cardview.widget.CardView>


    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/flexButtons"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginRight="12dp"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@+id/listItemCardview"
        app:layout_constraintTop_toTopOf="@+id/listItemCardview">

        <androidx.cardview.widget.CardView
            android:id="@+id/button3CardView"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="4dp"
            android:foreground="?attr/selectableItemBackground"
            android:foregroundGravity="center"
            android:visibility="gone"
            app:cardCornerRadius="6dp"
            app:layout_alignSelf="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginHorizontal="3dp"
                app:alignContent="center"
                app:alignItems="center">

                <ImageView
                    android:id="@+id/button3ImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_marginRight="3dp"
                    tools:src="@drawable/ic_map_center" />

                <TextView
                    android:id="@+id/button3TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="Button 3"
                    app:layout_alignSelf="center" />
            </com.google.android.flexbox.FlexboxLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/button2CardView"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="4dp"
            android:foreground="?attr/selectableItemBackground"
            android:foregroundGravity="center"
            android:visibility="gone"
            app:cardCornerRadius="6dp"
            app:layout_alignSelf="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginHorizontal="3dp"
                app:alignContent="center"
                app:alignItems="center">

                <ImageView
                    android:id="@+id/button2ImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_marginRight="3dp"
                    tools:src="@drawable/ic_map_center" />

                <TextView
                    android:id="@+id/button2TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="Button 2"
                    app:layout_alignSelf="center" />
            </com.google.android.flexbox.FlexboxLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/button1CardView"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="4dp"
            android:foreground="?attr/selectableItemBackground"
            android:foregroundGravity="center"
            android:visibility="gone"
            app:cardCornerRadius="6dp"
            app:layout_alignSelf="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginHorizontal="3dp"
                app:alignContent="center"
                app:alignItems="center">

                <ImageView
                    android:id="@+id/button1ImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_marginRight="3dp"
                    tools:src="@drawable/ic_map_center" />

                <TextView
                    android:id="@+id/button1TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="Button 1"
                    app:layout_alignSelf="center" />
            </com.google.android.flexbox.FlexboxLayout>
        </androidx.cardview.widget.CardView>

    </com.google.android.flexbox.FlexboxLayout>

</androidx.constraintlayout.widget.ConstraintLayout>