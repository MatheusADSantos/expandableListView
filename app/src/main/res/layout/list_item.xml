<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/listItemCardview"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:foregroundGravity="center"
        app:cardCornerRadius="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/listItem"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:src="@drawable/ic_map_center" />
    </androidx.cardview.widget.CardView>

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/flexButtons"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        app:alignItems="center"
        app:justifyContent="flex_end"
        app:layout_constraintEnd_toStartOf="@+id/listItemCardview"
        app:layout_constraintTop_toTopOf="@+id/listItemCardview">

        <Button
            android:id="@+id/button_2"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_margin="2dp"
            android:backgroundTint="@color/cardview_light_background"
            android:drawableLeft="@drawable/ic_map_center"
            android:drawablePadding="4dp"
            android:text="Button 3"
            android:textAllCaps="false"
            android:textColor="@color/colorText"
            android:textSize="12sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/button_1"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_margin="2dp"
            android:backgroundTint="@color/cardview_light_background"
            android:drawableLeft="@drawable/ic_map_center"
            android:text="Button 2"
            android:textAllCaps="false"
            android:textColor="@color/colorText"
            android:textSize="12sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/button_0"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_margin="2dp"
            android:backgroundTint="@color/cardview_light_background"
            android:drawableLeft="@drawable/ic_map_center"
            android:text="Button 1"
            android:textAllCaps="false"
            android:textColor="@color/colorText"
            android:textSize="12sp"
            android:visibility="gone" />

    </com.google.android.flexbox.FlexboxLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
